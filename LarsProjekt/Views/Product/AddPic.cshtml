@model ProductModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Picture</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="AddPic" asp-controller="Product" asp-route-id="@Model.Id" method="post" class="row" enctype="multipart/form-data">

            <div class="form-floating py-2 col-12">
                <input type="file" name="file" asp-for="Picture" class="form-control border-0 shadow" />
                <label asp-for="Picture" class="ms-2"></label>            
            </div>            
            <div class="row pt-2">
                <div class="col-6 col-md-3">                    
                        <button type="submit" value="upload" class="btn btn-light form-control">Upload</button>                    
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>