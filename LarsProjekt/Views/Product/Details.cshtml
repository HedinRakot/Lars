@model ProductModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Price($)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Category</td>
                    <td>@Model.Description</td>
                    <td>@Model.Price</td>
                </tr>
            </tbody>
        </table>
        <div class="row pt-2">            
            <div class="col-4 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
            </div>
        </div>
    </div>
</div>
