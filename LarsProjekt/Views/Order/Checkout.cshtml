@model OrderModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Checkout</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="CreateOrder" asp-controller="Order" method="post" class="row">
            <input asp-for="User.Id" hidden />
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="FirstName" class="form-control border-0 shadow" />
                    <label asp-for="FirstName" class="ms-2"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="LastName" class="form-control border-0 shadow" />
                    <label asp-for="LastName" class="ms-2"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Address" class="form-control border-0 shadow" />
                    <label asp-for="Address" class="ms-2"></label>
                    <span asp-validation-for="Address" class="text-danger"></span> 
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="City" class="form-control border-0 shadow" />
                    <label asp-for="City" class="ms-2"></label>
                    <span asp-validation-for="City" class="text-danger"></span> 
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="State" class="form-control border-0 shadow" />
                    <label asp-for="State" class="ms-2"></label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PostalCode" class="form-control border-0 shadow" />
                    <label asp-for="PostalCode" class="ms-2"></label>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Country" class="form-control border-0 shadow" />
                    <label asp-for="Country" class="ms-2"></label>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Phone" type="number" class="form-control border-0 shadow" />
                    <label asp-for="Phone" class="ms-2"></label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success form-control">Continue</button>                    
                        <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
