@model CouponModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Edit" : "Create") Coupon</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="CreateEdit" asp-controller="Coupon" asp-route-id="@Model.Id" method="post" class="row">            
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Code" class="form-control border-0 shadow" />
                    <label asp-for="Code" class="ms-2"></label>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Discount" class="form-control border-0 shadow" />
                    <label asp-for="Discount" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Type" class="form-control border-0 shadow" />
                    <label asp-for="Type" class="ms-2"></label>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ExpiryDate" class="form-control border-0 shadow" />
                    <label asp-for="ExpiryDate" class="ms-2">Please enter the date and time when it expires. Format: YYYY-MM-DD 12:00:00</label>
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>                
                <div class="form-floating py-2 col-12">
                    <input asp-for="Count" class="form-control border-0 shadow" />
                    <label asp-for="Count" class="ms-2">Please enter how often it can be used</label>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">                        
                        @if (Model.Id != 0)
                        {
                        <button type="submit" class="btn btn-light form-control">Update</button>
                        }
                        else
                        {
                        <button type="submit" class="btn btn-light form-control">Create</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Coupon" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
