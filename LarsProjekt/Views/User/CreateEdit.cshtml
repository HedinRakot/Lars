@using LarsProjekt.Models.ViewModels
@model UserRegistrationVM


<form asp-action="CreateEdit" asp-controller="User" method="post">
    <input asp-for="AddressModel.Id" hidden />
    <br />
    <div class="container">
        <div class="card shadow border-0">
            <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
                <div class="row px-4">
                    @if (Model.UserModel.Id != 0)
                    {
                        <div class="col-6">
                            <h5 class="pt-2 text-white">
                                Hi @Context.User.Identity.Name!
                            </h5>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Your personal information:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>First Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.FirstName" class="form-control" />
                                    <span asp-validation-for="AddressModel.FirstName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Last Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.LastName" class="form-control" />
                                    <span asp-validation-for="AddressModel.LastName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Street</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.Street" class="form-control" />
                                    <span asp-validation-for="AddressModel.Street" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Number</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.HouseNumber" class="form-control" />
                                    <span asp-validation-for="AddressModel.HouseNumber" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>City</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.City" class="form-control" />
                                    <span asp-validation-for="AddressModel.City" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>State</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.State" class="form-control" />
                                    <span asp-validation-for="AddressModel.State" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Postal Code</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.PostalCode" class="form-control" />
                                    <span asp-validation-for="AddressModel.PostalCode" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Country</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.Country" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="AddressModel.Phone" class="form-control" />
                                    <span asp-validation-for="AddressModel.Phone" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <div class="border p-3">
                                <input asp-for="UserModel.Id" hidden />
                                <div asp-validation-summary="ModelOnly"></div>
                                @if (Model.UserModel.Id != 0)
                                {
                                    <div class="form-floating py-2 col-12">
                                        <input disabled asp-for="UserModel.Username" class="form-control border-0 shadow" />
                                        <label asp-for="UserModel.Username" class="ms-2"></label>
                                        <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input disabled asp-for="UserModel.Email" class="form-control border-0 shadow" />
                                        <label asp-for="UserModel.Email" class="ms-2"></label>
                                        <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input disabled asp-for="UserModel.Password" class="form-control border-0 shadow" hidden />
                                        <a asp-controller="User" asp-action="ChangePassword" class="btn btn-outline-primary border form-control">Change Password</a>
                                    </div>
                                } else
                                {
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="UserModel.Username" class="form-control border-0 shadow" />
                                        <label asp-for="UserModel.Username" class="ms-2"></label>
                                        <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="UserModel.Email" class="form-control border-0 shadow" />
                                        <label asp-for="UserModel.Email" class="ms-2"></label>
                                        <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="UserModel.Password" class="form-control border-0 shadow" type="password" />
                                        <label asp-for="UserModel.Password" class="ms-2"></label>
                                        <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                                    </div>
                                }                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Submit</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark border form-control">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
