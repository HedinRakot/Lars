                                </a>
                            </div>
                            <div class="btn-group-sm" role="group">
                                <a asp-controller="User" asp-action="CreateEdit" asp-route-id="@user.Id" class="btn btn-outline-dark border mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                            <div class="btn-group-sm" role="group">
                                <a data-bs-toggle="modal" data-bs-target="#deleteModal" data-bs-id="@user.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

