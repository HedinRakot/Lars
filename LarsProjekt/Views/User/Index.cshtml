<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Users</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col text-end">
                <h5>New here? <i class="bi bi-arrow-right"></i></h5>
            </div>
            <div class="col-6">
                <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Register
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-question-lg"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
