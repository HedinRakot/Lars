@model UserModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User Details</h2>
            </div>
        </div>
    </div>
    <input asp-for="Id" hidden />
    <div class="card-body p-4">
        <div class="card border-primary mb-3" style="max-width: 100%;">
            <div class="card-header">@Model.Username</div>
            <div class="card-body">
                <p class="card-text">@Model.Email
                <hr />
                
            </div>
        </div>        
        <div class="row pt-2">          
            <div class="col-4 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
            </div>
        </div>
    </div>
</div>
