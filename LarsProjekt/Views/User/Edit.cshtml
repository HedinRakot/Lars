<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" asp-controller="User" method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    @* <span asp-validation-for="Name" class="text-danger"></span> *@
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    @* <span asp-validation-for="Description" class="text-danger"></span> *@
                </div>
                <div class="row pt-2">
                    <div class="col-4 col-md-3">
                        <button type="submit" class="btn btn-light form-control">Update</button>
                    </div>
                    <div class="col-4 col-md-3">
                        <a asp-action="ChangePassword" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-light form-control">Change Password</a>
                    </div>
                    <div class="col-4 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

