@model UserModel

<h3>Edit</h3>
<hr />

<form asp-action="Edit" asp-controller="User" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Enter your new username</p>
    <input type="text" asp-for="Name" />
    <p class="mt-3">Update your description</p>
    <textarea type="text" asp-for="Description"></textarea>
    <br />
    <button class="btn btn-dark mt-3" type="submit">Save</button>
</form>
