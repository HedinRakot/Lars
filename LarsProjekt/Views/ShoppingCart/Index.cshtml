@model ShoppingCartModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your Shopping Cart</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price(each)</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price</td>
                        <td>@item.Amount</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@item.Product.Id" class="btn btn-light mx-2">
                                    <i class="bi bi-trash"></i> Remove
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
        <div class="row pt-2">
            <div class="col-4 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark border form-control">Back</a>
            </div>
            <div class="col-4 col-md-3">
                <a asp-controller="Product" asp-action="" class="btn btn-outline-dark border form-control">Clear Cart</a>
            </div>
        </div>
    </div>
</div>
